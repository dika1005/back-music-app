# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JioSaavn API (using saavn.sumit.co)
JIOSAAVN_API_URL=https://saavn.sumit.co/api
